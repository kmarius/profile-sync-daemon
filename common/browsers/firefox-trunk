if [[ -d $HOME/.mozilla/firefox-trunk ]]; then
    PSNAME="$browser"
    index=0
    while read -r profileItem; do
        if [[ $profileItem = /* ]]; then
            # path is not relative
            DIRArr[index]="$profileItem"
        else
            # we need to prepend the default path to give a
            # fully qualified path
            DIRArr[index]="$HOME/.mozilla/firefox-trunk/$profileItem"
        fi
        ((index++))
    done < <(awk -F= '/[Pp]ath=/{print $2}' "$HOME/.mozilla/firefox-trunk/profiles.ini")
fi

check_suffix=1

